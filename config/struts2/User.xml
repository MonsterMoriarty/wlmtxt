<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<package name="User" namespace="/User" extends="struts-default">
		<action name="User_*" class="com.wlmtxt.User.action.UserAction"
			method="{1}">
			<!-- 激活页面-->
			<result name="skipActivatePage">/WEB-INF/view/index/email_verification.jsp</result>
			
			<!--  -->
			<result name="skipToIndexPage">/WEB-INF/view/index/index.jsp</result>
			<!--分类页面  -->
			<result name="skipToCategoryPage">/WEB-INF/view/index/index_category.jsp</result>
			<!-- 排行榜页 -->
			<result name="skipToRankPage">/WEB-INF/view/index/index_rank.jsp</result>
			<!--发布作品页  -->
			<result name="skipToPublishWorksPage">/WEB-INF/view/personal_center/personal_center_upload_dynamic.jsp</result>
			<!-- 个人中心之我的动态页 -->
			<result name="skipToMyDynamicPage">/WEB-INF/view/personal_center/personal_center_my_dynamic.jsp</result>
			<!-- 个人资料页 -->
			<result name="skipToPersonalDataPage">/WEB-INF/view/personal_center/personal_center_personal_data.jsp</result>
			<!-- 我的关注页 -->
			<result name="skipToMyAttentionPage">/WEB-INF/view/personal_center/personal_center_my_attention.jsp</result>
			<!-- 我的粉丝页 -->
			<result name="skipToMyFansPage">/WEB-INF/view/personal_center/personal_center_my_fans.jsp</result>
			<!-- 观看历史页 -->
			<result name="skipToWatchHistoryPage">/WEB-INF/view/personal_center/personal_center_watch_history.jsp</result>
			<!-- 与我相关之我的收藏页 -->
			<result name="skipToRelationCollectionPage">/WEB-INF/view/personal_center/personal_center_relation_collection.jsp</result>
			<!-- 与我相关之我的点赞页 -->
			<result name="skipToRelationAppreciatesPage">/WEB-INF/view/personal_center/personal_center_relation_appreciates.jsp</result>
			<!-- 与我相关之我的评论页 -->
			<result name="skipToRelationCommentsPage">/WEB-INF/view/personal_center/personal_center_relation_comments.jsp</result>
			<!-- 消息中心之点赞通知页 -->
			<result name="skipToAppreciatesNoticePage">/WEB-INF/view/personal_center/personal_center_appreciates_notice.jsp</result>
			<!-- 消息中心之收藏通知页 -->
			<result name="skipToCollectionNoticePage">/WEB-INF/view/personal_center/personal_center_collection_notice.jsp</result>
			<!-- 消息中心之评论通知页 -->	
			<result name="skipToCommentsNoticePage">/WEB-INF/view/personal_center/personal_center_comments_notice.jsp</result>
			<!-- 消息中心之审核通知页 -->
			<result name="skipToAuditNoticePage">/WEB-INF/view/personal_center/personal_center_audit_notice.jsp</result>
		</action>
	</package>
</struts>
