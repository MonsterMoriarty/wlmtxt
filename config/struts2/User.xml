			<result name="skipToAppreciatesNoticePage">/view/personal_center/personal_center_appreciates_notice.jsp</result>
			<!-- 消息中心之收藏通知页 -->
			<result name="skipToCollectionNoticePage">/view/personal_center/personal_center_collection_notice.jsp</result>
			<!-- 消息中心之评论通知页 -->	
			<result name="skipToCommentsNoticePage">/view/personal_center/personal_center_comments_notice.jsp</result>
			<!-- 消息中心之审核通知页 -->
			<result name="skipToAuditNoticePage">/view/personal_center/personal_center_audit_notice.jsp</result>
